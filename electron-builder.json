{
    "productName": "Food Manager",
    "appId": "Food Manager",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json",
        "!*.code-workspace/*",
        "!.angular/*",
        "!.idea/*",
        "!src/*",
        "!e2e/*",
        "!hooks/*",
        "!release/*",
        "!release-staging/*",
        "!release-testing/*"
    ],
    "win": {
        "icon": "dist/assets/icons/favicon.png"
    },
    "mac": {
        "icon": "dist/assets/icons",
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "icon": "dist/assets/icons",
        "target": [
            "AppImage"
        ]
    },
    "publish": [
        {
            "provider": "s3",
            "bucket": "food-manager-update",
            "endpoint": "https://storage.yandexcloud.net"
        }
    ]
}
